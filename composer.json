{
    "name": "hoa/composer",
    "description": "The Hoa\\Composer compatibility library.",
    "type"       : "library",
    "keywords"   : ["library", "composer", "compatibility"],
    "homepage"   : "http://hoa-project.net/",
    "license"    : "BSD-3-Clause",
    "authors"    : [
        {
            "name": "jubianchi",
            "email": "contact@jubianchi.fr"
        },
        {
            "name" : "Ivan Enderlin",
            "email": "ivan.enderlin@hoa-project.net"
        },
        {
            "name"    : "Hoa community",
            "homepage": "http://hoa-project.net/"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/jubianchi/Websocket.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/jubianchi/Socket.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/jubianchi/Stream.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/jubianchi/Http.git"
        }
    ],
    "require": {
        "hoa/websocket": "dev-master"
    },
    "require-dev": {
        "atoum/atoum": "dev-master"
    },
    "minimum-stability": "dev",
    "target-dir": "Hoa/Composer",
    "autoload": {
        "psr-0": {
            "Hoa\\Composer": "."
        }
    }
}
